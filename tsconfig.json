{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "baseUrl": ".",
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/services/**/*", "index.ts", "logger.ts", "__tests__/**/*"],
  "exclude": ["node_modules", "build", "teamcenter", "teamcenter-client"]
}
